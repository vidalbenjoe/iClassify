<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundblurpurple"
    android:orientation="vertical" >

    <RelativeLayout
    android:id="@+id/rlsl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true" >
    
       <com.capstoneii.iclassify.library.TypewriterTextView
    	android:id="@+id/knnsecondtext"
	    android:layout_width="480dp"
	    android:layout_height="204dp"
	    android:layout_centerHorizontal="true"
	    android:gravity="center"
	    android:layout_marginTop="150dp"
	    android:shadowColor="@android:color/black"
	    android:shadowDx="1"
	    android:shadowDy="1"
	    android:shadowRadius="2"
	    android:text="@string/knnsimulexample1"
	    android:textColor="#fff"
	    android:textSize="18sp" />
       
       <ImageView
        android:id="@+id/knnnextbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/knnsecondtext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/simulnextbt" />
    </RelativeLayout>
    
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rlsl"
