<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundblur" >t
         <RelativeLayout
            android:id="@+id/s"
         	android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
     <TextView
         	android:id="@+id/problemtextid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Should we play baseball?"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            />
    
        </RelativeLayout>

        <ImageView
            android:id="@+id/baseballimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/baseballplayer" />
     
<RelativeLayout
    android:id="@+id/rlscroll"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:layout_below="@+id/baseballimg" >  
        
<ScrollView android:id="@+id/textAreaScroller" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:scrollbars="vertical"
  	 >
<TextView
    android:id="@+id/problemtextdesc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="40dp"
    android:maxLines="7"
    android:scrollbars="vertical"
    android:text="@string/pracprob1"
    android:textColor="#fff"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:textStyle="bold"
    android:textSize="20sp"
    android:shadowColor="@android:color/black"
    android:shadowDx="1"
    android:shadowDy="1"
    android:shadowRadius="2" />
   </ScrollView>

<TextView
    android:id="@+id/problemtextattrib"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/weathattrib"
    android:textColor="#fff"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="40dp"
    android:textSize="17sp"
    android:shadowColor="@android:color/black"
    android:shadowDx="1"
    android:shadowDy="1"
    android:shadowRadius="2"
    android:layout_below="@+id/textAreaScroller" />
</RelativeLayout>   

<Button
    android:id="@+id/viewdatasetbt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="14dp"
    android:background="@drawable/view_datasetbt" />

</RelativeLayout>
